{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@UI/*": ["components/UI/*"],
      "@UI": ["components/UI"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],
      "@http/*": ["http/*"],
      "@http": ["http"],
      "@pages/*": ["pages/*"],
      "@pages": ["pages"],
      "@store/*": ["store/*"],
      "@store": ["store"],
      "@actions/*": ["store/actions-creators/*"],
      "@services/*": ["services/*"],
      "@services": ["services"],
      "@s/*": ["styles/*"],
      "@s": ["styles"],
      "@t/*": ["types/*"],
      "@t": ["types"],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
